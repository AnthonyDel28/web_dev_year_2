{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="row my-5">
            <div class="col-md-12 offset-1">
                <h2 class="display-4">Détail de l'article</h2>
            </div>
            <div class="col-md-4">
                <img src="{{ asset('img/posts/' ~ post.image) }}" alt="{{ post.title }}">
            </div>
            <div class="col-md-8">
                <h3 class="display-3 my-5">{{ post.title|capitalize }}</h3>
                <h4>Création: {{ post.createdAt|date('d/m/Y') }}</h4>
                <p class="lead">{{ post.content }}</p>
                <a href="{{ path('posts') }}" class="btn btn-outline-dark">Retour aux articles</a>
            </div>
        </div>
    </main>


{% endblock %}